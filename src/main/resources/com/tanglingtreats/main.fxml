<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<HBox xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.tanglingtreats.MainController"
            prefHeight="400.0" prefWidth="600.0" >
    <TextArea fx:id="inputBox" promptText="Input text here"/>
    <VBox minWidth="-Infinity" spacing="5" alignment="CENTER">
        <ChoiceBox fx:id="formatChoices" onAction="#handleFormatAction"/>
        <Button>Convert</Button>
    </VBox>
    <TextArea fx:id="outputBox" promptText="Output here"/>
</HBox>
